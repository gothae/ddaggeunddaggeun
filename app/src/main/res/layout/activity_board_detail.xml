<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BoardDetailActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/frame_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#99F4C37B">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:paddingHorizontal="10dp"
            android:background="@color/main">

            <TextView
                android:id="@+id/toolbartext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/sdsamliphopangchettfbasic"
                android:text="글보기"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <ImageButton
                android:id="@+id/btn_write"
                android:layout_width="41dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_trash_delete" />


            <ImageButton
                android:id="@+id/btn_rewrite"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_modify" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:paddingHorizontal="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_person_24"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/sdsamliphopangchettfbasic"
                        android:textSize="15dp"
                        android:text="익명"/>
                    <TextView
                        android:id="@+id/txt_date"
                        android:textSize="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:fontFamily="@font/sdsamliphopangchettfbasic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7분전"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8.5">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="학생 본부에 농협 atm이 있다는데..."
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:fontFamily="@font/sdsamliphopangchettfbasic" />

                <TextView
                    android:id="@+id/txt_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sdsamliphopangchettfbasic"
                    android:text="정확히 어디에 있나요?ㅠㅠ \n 보이질 않네.."/>

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:gravity="right|bottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
<!--                    <ImageButton-->
<!--                        android:id="@+id/btn_like"-->
<!--                        android:layout_marginRight="3dp"-->
<!--                        android:background="@android:color/transparent"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:adjustViewBounds="true"-->
<!--                        android:scaleType="fitCenter"-->
<!--                        android:src="@drawable/heart_4"/>-->

                    <ToggleButton
                        android:id="@+id/btn_like"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="3dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/button_favorite"
                        android:checked="false"
                        android:scaleType="fitCenter"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                    <TextView
                        android:id="@+id/txt_like"
                        android:layout_marginRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:text="10"
                        android:textColor="#FF2C0E"/>
                    <ImageButton
                        android:layout_marginRight="3dp"
                        android:background="@android:color/transparent"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/chat"/>
                    <TextView
                        android:id="@+id/txt_view"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:text="8"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bababa"
                ></View>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@color/white"
            android:gravity="bottom"
            android:orientation="vertical"
            android:weightSum="10">


            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipe_comment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8.95"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"/>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"
                android:background="#bababa" />

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingHorizontal="20dp"
                android:weightSum="10"
                android:orientation="horizontal">
<!--                <LinearLayout-->
<!--                    android:orientation="horizontal"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_weight="2"-->
<!--                    android:gravity="center_vertical|center_horizontal"-->
<!--                    android:layout_height="match_parent">-->

<!--                    <View-->
<!--                        android:layout_width="1dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:background="#bababa"-->
<!--                        ></View>-->
<!--                </LinearLayout>-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="9."
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/input_r_content"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:hint="댓글을 입력해 주세요."
                        android:textColor="@color/black"
                        android:fontFamily="@font/sdsamliphopangchettfbasic"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/btn_r_write"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/commentbutton"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>


